<div class="panel panel-primary <%= resource_class_name %>">
    <div class="panel-heading">
        <h3 class="panel-title">
            <%= resource_class.count %> <%= resource_class.model_name.human(count: resource_class.count) %>
            <%= link_to new_solvent_path, style: "float:right;" do %>
                <span class="glyphicon glyphicon-plus"></span>
            <% end %>
        </h3>
    </div>
    <div class="panel-body">
        <%= nav_tabs :solvents do |tabs| %>
            <% tabs.add "by Name", 'list', collection: collection.by_name %>
            <% tabs.add "by Importance", 'list', collection: collection.by_importance %>
        <% end %>
    </div>
    <div class="panel-footer">
        <%= link_to new_solvent_path, :class => "btn btn-success" do %>
            <span class="glyphicon glyphicon-plus"></span> <%= t :'global.add' %>
        <% end %>
    </div>
</div>
