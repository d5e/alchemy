<table class="table table-condensed">
    <thead>
        <tr>
            <th style="min-width: 9em;"><%= resource_class.human_attribute_name :name %></th>
            <% unless :concentration.in? @supress.to_a %>
                <th><%= resource_class.human_attribute_name :concentration %></th>
            <% end %>
            <th><%= resource_class.human_attribute_name :creation_at %></th>
            <th><%= resource_class.human_attribute_name :sensory_tags %></th>
        </tr>
    </thead>
    <tbody>
        <%= render collection %>
    </tbody>
</table>
