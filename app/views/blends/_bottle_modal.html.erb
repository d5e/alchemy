<div class="modal fade" id="bottle-wizard" tabindex="-1" role="dialog" aria-labelledby="Bottling Wizard" aria-hidden="true">
    <div class="modal-dialog">
        <%= form_tag bottle_blend_path(resource), :remote => true do %>
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel"><%= t :'global.bottling_wizard' %></h4>
                </div>
                <div class="modal-body">
                    <p><%= t :'view.hints.bottling_wizard' %></p>
                    <hr/>
                    <div class="form-group">
                        <%= text_field_tag :new_blend_name, "#{resource.name}, bottled", class: 'form-control', placeholder: t(:'view.bottling.new_name') %>
                    </div>
                    <div class="form-inline">
                        <div class="form-group">
                            <div class="input-group">
                                <%= text_field_tag :amount_in_mg, nil, class: 'form-control', placeholder: "#{number_with_precision resource.total_mass} mg" %>
                                <div class="input-group-addon">mg</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"><%= t :'global.cancel' %></button>
                    <button type="submit" class="btn btn-primary"><%= t :'view.bottling.action' %> <span class="glyphicon glyphicon-new-window"></span></button>
                </div>
            </div>
        <% end %>
    </div>
</div>