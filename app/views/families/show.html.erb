<div class="panel panel-primary <%= resource_class_name %> <%= bg_color_class(resource.color) %>" style="border-color:#<%= resource.color %>;">
    <div class="panel-heading" style="background-color:#<%= resource.color %>; border-color:#<%= resource.color %>;">
        <h3 class="panel-title">
            <div class="topright-controls">
                <%= link_to edit_resource_path(resource), title: "Edit", :'data-toggle' => "tooltip" do %>
                    <span class="glyphicon glyphicon-edit"></span>
                <% end %>
            </div>
            <%= resource.name %>
        </h3>
    </div>
    <div class="panel-body">
        <% if resource.parent.present? %>
            <div class="row">
                 <%= content_tag :span, resource_class.human_attribute_name(:parent), class: 'col-sm-2 small-label' %>
                 <div class="col-sm-9">
                     <%= link_to resource.parent, resource.parent, colored(resource.parent, class: "btn btn-default btn-sm") %>
                 </div>
             </div>
        <% end %>
        <% if resource.parent.present? and resource.tags.present? || resource.children.present? || resource.notes.present? %>
            <hr/>
        <% end %>
        <% if resource.tags.present? %>
            <div class="row">
                <%= content_tag :span, resource_class.human_attribute_name(:tags), class: 'col-sm-2 small-label' %>
                <div class="col-sm-9">
                    <%= resource.tags %>
                </div>
            </div>
            <hr/>
        <% end %>
        
        <% if resource.notes.present? %>
            <div class="row">
                <%= content_tag :span, resource_class.human_attribute_name(:notes), class: 'col-sm-2 small-label' %>
                <div class="col-sm-9">
                    <%= smarted resource.notes %>
                </div>
            </div>
            <hr/>
        <% end %>

        <% if resource.children.present? %>
            <div class="row">
                <%= content_tag :span, resource_class.human_attribute_name(:children), class: 'col-sm-2 small-label' %>
                <div class="col-sm-9">
                    <div class="buttons-container">
                        
                    </div>
                    <% resource.children.each do |child| %>
                        <%= link_to child, child, colored(child, class: "btn btn-default btn-sm") %>
                    <% end %>
                </div>
            </div>
        <% end %>
        <% if resource.children.present? && resource.blends.present? %>
            <hr/>
        <% end %>
        <% if resource.blends.present? %>
            <div class="row">
                <%= content_tag :span, resource_class.human_attribute_name(:blends), class: 'col-sm-2 small-label' %>
                <div class="col-sm-9">
                    <% if resource.blends.size > 18 %>
                        <%= nav_tabs :blend_tabs do |tabs| %>
                            <% tabs.add "Detail", 'blends/list', collection: resource.blends %>
                            <% tabs.add "by creation at", 'blends/list_short_by_creation_at', collection: resource.blends %>
                            <% tabs.active "Compact", 'list_short', collection: resource.blends %>
                        <% end %>
                    <% else %>
                        <%= render 'blends/list_short', collection: resource.blends, nopanel: true %>
                    <% end %>
                </div>
            </div>
        <% end %>
     </div>

    <div class="panel-footer">
        <%= link_to add_blends_family_path(resource), {class: "btn btn-default"} do %>
            <span class="glyphicon glyphicon-log-in"></span> <%= t :'global.manage_memberships' %>
        <% end %>
        <%= link_to url_for(action: :new, parent_id: resource.id), class: "btn btn-default" do %>
            <span class="glyphicon glyphicon-th"></span> <%= t :'global.add_subcategory' %>
        <% end %>
    </div>
</div>
<p>
    <%= link_to url_for(action: :index), {class: "btn btn-default"} do %>
        <span class="glyphicon glyphicon-th-list"></span> Index
    <% end %>
</p>

