<% if resource.errors.any? %>
    <div class="panel panel-warning">
        <div class="panel-heading">
            <h3 class="panel-title">
                fix errors before saving
            </h3>
        </div>
        <div class="panel-body">
            <ul>
                <% resource.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    </div>
<% end %>