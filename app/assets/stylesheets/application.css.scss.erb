body {
    
    .families-drag-detachable a.family-link {
        z-index: 10;
    }
    .family.droparea.devnull {
        position: fixed;
        left: 19%; right: 19%; bottom: 5%;
        min-height:10%; width:62%;
        background: #f7f7f7;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 20px 70px 5px 70px;
        display:none;
        z-index:8;
        .background {
            position: absolute;
            font-size: 48px;
            text-align: center;
            opacity: 0.1; 
            width: 100%;
            bottom: 50%;
            margin: auto -70px -32px -70px;
        }
        .btn.btn-danger {
          position: absolute;
          right: 5px;
          bottom: 5px;
        }
    }
    
    .ctag {
      display: inline-block;
      min-height: 9px;
      height: 59%;
      width: 0.66em;
    }
  
  .panel.panel-primary.substance {
    border-color: $substance-primary-color;
  }
  .panel.panel-primary.substance > .panel-heading {
    background-color: $substance-primary-color;
    border-color: inherit;
  }


  .panel.panel-primary.blend {
    border-color: $blend-primary-color;
  }
  .btn.btn-primary.blend,
  .panel.panel-primary.blend > .panel-heading {
    background-color: $blend-primary-color;
    border-color: $blend-primary-color;
  }
  
  
  
  
  
  ul.nav.navbar-nav,
  .dropdown-menu {
    li.active.substance a {
      background-color: $substance-primary-color;
      color: white;
    }
    li.active.blend a {
      background-color: $blend-primary-color;
      color: white;
    }
    li.locale-links {
      a {
        text-align: center !important;
      }
      a.active {
        font-weight: bold;
      }
    }
  }
  
  .row.dilution + .row.dilution {
    border-top: 1px solid #eee;
    padding-top: 1ex;
    margin-top: 1ex;
  }
  
  .form-group {
    select.form-control {
      float: left;
    }
    select.form-control + select.form-control {
      margin-left: 1em;
    }
    select.form-control.year {
      width: 7em;
    }
    select.form-control.month {
      width: 9em;
    }
    select.form-control.day {
      width: 5em;
    }
  }
  
  form {
    .field_with_errors,
    .has-error {
      input, textarea, select {
        background: rgba(255,0,0,0.1);
        border-color: #f2cfd0 !important;
      }
    }
  }
  
  form {
    select.form-control.dilution.need-filtering {
      option[disabled] {
        display: none;
      }
    }
  }
  
  .buttons-container {
    .btn {
      margin-bottom: 4px;
    }
    .btn.btn-xs {
      margin-bottom: 3px;
    }

    .btn.btn-sm {
        font-family: "Roboto Condensed";
        font-size: 14px;
        padding: 3px 12px;
    }
  }
  
  table.table {
    thead td {
      font-size: 12px;
      font-weight: bold;
      color: #999;
    }
    td.r,th.r {
      text-align: right;
    }
    td.red {
      background: rgba(255,0,0,0.3);
      color: #b22;
    }
    tr.translucent {
      font-size: 11px;
      opacity: 0.7;
    }
  }
  p.warning {
    border-top: 1px solid rgba(255,0,0,0.7);
    border-bottom: 1px solid rgba(255,0,0,0.7);
    text-align: center;
    padding: 1ex 1em;
    color: #b22;
  }
  
  .small-unit {
    font-size: 11px;
    color: #777;
  }
  
  #psf-autocomplete-dropdown {
    z-index: 5;
    position: absolute; background: white;
    padding: 5px;
    margin-top: 9px;
    
    -webkit-box-shadow: 3px 3px 16px -7px rgba(0,0,0,0.75);
    -moz-box-shadow: 3px 3px 16px -7px rgba(0,0,0,0.75);
    box-shadow: 3px 3px 16px -7px rgba(0,0,0,0.75);
    .btn {
      display: block;
      text-align: left;
      border-radius: 0px;
      opacity: 0.87;
    }
    .btn[class*="color"] {
      color: rgba(0,0,0,0.7);
      font-weight: bold;
    }
    .btn:hover {
        opacity: 1.0;
    }
    hr {
      margin: 0;
      border-top: 1px solid #fff;
    }
  }
  
  
  // COLOR select for substances categories
  
  .label[class*="color-"] {
    cursor: default;
  }
  .panel[class*="color-"] {
    .panel-footer {
      background-color: inherit;
    }
  }
  <% Object.new.extend(ApplicationHelper).substance_character.each do |key, prop| %>
    .color-<%= key %> { // <%= prop.first %>
      background-color: <%= prop.last %> !important;
      border-color: <%= prop.last %> !important;
    }
  <% end %>
  
  .character-strip {
    height: 27px;
    font-size: 0;
    box-shadow: 2px 2px 6px -2px rgba(0,0,0,0.9);
    span.segment {
      display:inline-block;
      height: 100%
    }
  }
  
  .character-legend {
      <% Object.new.extend(ApplicationHelper).substance_character.each do |key, prop| %>
        .highlighted.color-<%= key %> { // <%= prop.first %>
          background-color: <%= prop[2] %> !important;
          border-color: <%= prop[2] %> !important;
          color: <%= prop[1] %> !important;
        }
      <% end %>
  }
  
  div[data-colorpicker] {
    position: absolute;
    right: 3ex;
    margin-top: 5ex;
    z-index: 3;
    padding: 3ex;
    background: white;
  }
  div[data-colorpicker] input {
    box-sizing: content-box;
    padding: 1px 3px 0px 1px;
  }

  button.virtual.aligner {
    width: 0px;
    visibility: hidden;
  }
  
}
